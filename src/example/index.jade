    script.
      $(function(){
        $('code').each(function(){
          hljs.highlightBlock(this);
        });

        var slide = new UgoSlide();

        setInterval(function(){
          if (Math.random() > 0.01) return;
          slide.showCurrent();
        }, 100);
      });
